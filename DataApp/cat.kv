<MainWindow>:
	name: "mainWindow"

	# MDBoxLayout:
	MDRaisedButton:
		text: "Rate Cats"
		pos_hint: {"center_x": .5, "center_y": .5}
		size: (Window.width * .5, Window.height * .5)
		on_release:
			app.root.current = "ratingWindow"
			root.manager.transition.direction = "left"

	MDRaisedButton:
		text: "Log Out"
		on_release:
			app.root.current = "startupWindow"
			root.manager.transition.direction = "right"

<RatingWindow>:
	name: "ratingWindow"

	Image:
		source: 'Pics/download.jpg'
		size: self.texture_size
	MDRaisedButton:
		text: "Rate"
		pos_hint: {"center_x": .5, "center_y": .5}
		on_release:
			app.GetImage()

	MDRaisedButton:
		text: "Go Back"
		on_release:
			app.root.current = "mainWindow"
			root.manager.transition.direction = "right"


<BackButton>:
	MDIconButton:
		icon: 'arrow-left-thick'
		pos_hint: {'center_x':0.5,'center_y':0.1}
		on_press: self.onBackBtn()
